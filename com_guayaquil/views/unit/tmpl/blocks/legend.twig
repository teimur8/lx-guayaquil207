{% block legend %}
    <table width="49%" class="legend-table" border="0">
        <tbody>
        <tr>
            <th align="left" colspan="4">{{ 'unit_legend'|t }}</th>
        </tr>
        <tr>
            <td align="left">
                <img src="/lx/images/mouse_wheel.png"></td>
            <td> - {{ 'unit_legend_image_resizing'|t }}</td>
            <td align="left">
                <img src="/lx/images/lmb.png">
                <img src="/lx/images/move.png"></td>
            <td> - {{ 'unit_legend_mouse_scroll_image'|t }}</td>
        </tr>
        <tr>
            <td align="left">
                <img src="/lx/images/mouse.png">
                <img src="/lx/images/pointer.png"></td>
            <td> - {{ 'unit_legend_highlight_parts'|t }}</td>
            <td align="left">
                <img src="/lx/images/lmb.png">
                <img src="/lx/images/info_{{ theme }}.png">
            </td>
            <td> - {{ 'unit_legend_show_hind'|t }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
